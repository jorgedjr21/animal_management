<table class='table table-striped table-hover table-bordered'>
  <thead>
    <tr class='bg-info text-light'>
      <% animal_table_header(@person.animals.first).each do |header| %>
        <th><%= Animal.human_attribute_name(header) %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @person.animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= number_to_currency(animal.monthly_cost, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
        <td><%= animal.animal_kind.name %></td>
      </tr>
    <% end %>
    <tr class='table-secondary'>
      <td></td>
      <td>
        <strong>
          <%= number_to_currency(@person.animals.pluck(:monthly_cost).reduce(&:+).to_f, :unit => "R$ ", :separator => ",", :delimiter => ".") %>
        </strong>
        </td>
      <td></td>
    </tr>
  </tbody>
</table>