<div class="pb-2 mt-4 mb-2 border-bottom">
      <h2><%= t('messages.hello') %></h2>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3><%= Person.model_name.human(count: 2) %>: <%= @people.count %> <a href="<%= new_person_path %>" class='btn btn-secondary float-right'><%= t('actions.person.new') %></a></h3>
      </div>
      <div class="card-body">
        <% if @people.count > 0 %>
          <%= render 'list' %>
        <% else %>
          <p class="text-warning"><%= t('messages.not_found') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>